{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Tempo Build Editor",
            "type": "shell",
            "command": "./Tempo/Scripts/Build.sh",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compila com toolchain Tempo (Editor)",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "clear": false,
                "showReuseMessage": false
            }
        },
        {
            "label": "Tempo Build Game",
            "type": "shell",
            "command": "./Tempo/Scripts/Build.sh",
            "args": ["-configuration=Development"],
            "group": "build",
            "problemMatcher": ["$gcc"],
            "detail": "Compila com toolchain Tempo (Game)"
        },
        {
            "label": "Tempo Run Editor",
            "type": "shell",
            "command": "./Tempo/Scripts/Run.sh",
            "dependsOn": "Tempo Build Editor",
            "group": "build",
            "detail": "Build + abre Unreal Editor"
        }
    ]
}
